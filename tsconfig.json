{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "jsx": "react-jsx",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "isolatedModules": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/functions/*": ["netlify/functions/*"]
    },
    "types": ["vite/client", "node", "@netlify/functions"]
  },
  "include": ["src", "netlify/functions", "vite.config.ts", "serverless.ts"],
  "exclude": ["node_modules", "dist", "build", ".netlify"]
}